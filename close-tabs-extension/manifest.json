{
    "manifest_version": 2,
    "name": "Close Tabs Extension",
    "version": "1.0",
    "description": "Close user-specified number of tabs.",
    "permissions": ["tabs"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  